<html class='page'>
<head>
    <link rel="stylesheet" href="style.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Space+Mono" rel="stylesheet">
</head>
<body>
  <header class='header'>
    <h1> Welcome <%=@user.name%> </h1>
    <form action='/log_out' method='post'>
      <input type='submit' value='Log Out' class='button'/>
    </form>
    <a href='/profile/my_properties' class='button'>My Profile</a>
  </header>
    <div class="big_div">
    <h1> <%= @user.name%>'s Profile </h1><br>
    <% if (@user_properties) %>
      <% @user_properties.each do |n| %>
        <div class="properties_div">
        <b class="title"><%= n.title %></b>
        <li class="prices"> Â£<%= n.price_per_night %> per night</li></br>
        <img class="property_image" src=<%= n.image_url %>></br>
        <b>Location:</b> <%= n.location %></br>
        <b>Description:</b></br>
        <%= n.description %></br>
        <b>Availability:</b> <%= (n.available_from).to_s.split('-').reverse.join('/') %> - <%= (n.available_to).to_s.split('-').reverse.join('/') %></li>
        </div><br>
      <% end %>
    <% else %>
      <h1> <%= @user.name%>'s Profile </h1><br>
      <h4> You have not listed any properties </h4>
    <% end %>

  </div>

</body>
</html>
