<html class='page'>
  <head>
    <link rel="stylesheet" href="<%= url('/style.css') %>" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Hind+Siliguri|Montserrat|Poppins|Russo+One" rel="stylesheet">
  </head>
  <body>
    <header class='header'>
    <h1> Welcome <%=@user.name%> </h1>
    <form action='/log_out' method='post'>
      <input type='submit' value='Log Out' class='button'/>
    </form>
</header>
    <div class="big_div">
      <h1>Imm's Inns</h1></br>
      <a href='/property/new' class='button'>List Property</a>
    <% @property.each do |n| %>
      <div class="properties_div">
      <ul>
      <b><%= n.title %></b>
      <li> <%= n.description %></li>
      <li> <%= n.price_per_night %></li>
      <li> <%= n.location %></li>
      <li>Host's email: <%= n.user.email %></li>
      <li> <%= (n.available_from).to_s.split('-').reverse.join('/') %> - <%= (n.available_to).to_s.split('-').reverse.join('/') %></li>
      <br>
      <form action="/request_booking" method='post'>
       <input type='hidden' value='<%= n.id %>' name='property_id'/>
       <input type='submit' value="Request Booking" id='request_booking<%=n.id%>' class='button'/>
     </form></ul>
      </div>
      <% end %>
  </div>

  </body>
</html>
